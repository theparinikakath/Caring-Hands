    <style>
        /* Add your CSS for the body and footer here */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full viewport height */
        }
        .container {
            flex: 1; /* Allows the container to grow and push the footer down */
        }
        footer {
            flex-shrink: 0; /* Keeps the footer from shrinking */
            background-color: #ebebeb; /* Footer background color */
            padding: 1rem; /* Padding for the footer */
            text-align: center; /* Center text in footer */
        }
        .f-info-socials i {
            margin: 0 10px; /* Margin between social icons */
            font-size: 1.5rem; /* Adjust icon size */
        }
        .f-info-links a {
            text-decoration: none; /* No underline */
            color: #222; /* Text color */
            margin: 0 10px; /* Spacing between links */
        }
        .f-info-links a:hover {
            text-decoration: underline; /* Underline on hover */
        }
    </style>
</head>
<body>
    <%- include("../includes/navbar.ejs") %>
    <div class="container">
        <%- include("../includes/flash.ejs") %>
        <%- body %>
    </div>

