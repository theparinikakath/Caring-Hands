<% layout("/layouts/boilerplate") %>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <h3 class="text-center mb-4">Listing Details</h3>
            <div class="card">
                <img
                src="<%= listing.image.url %>"
                class="card-img-top show-img"
                alt="listing_image"/>
                <div class="card-body">
                    <p>Owned by 
                        <i><%= listing.owner.username %></i>
                    </p>
                  
                    <ul class="list-group">
                        <li class="list-group-item">Name: <%= listing.name %></li>
                        <li class="list-group-item">Age: <%= listing.age %></li>
                        <li class="list-group-item">Location: <%= listing.location %></li>
                        <li class="list-group-item">Items Given: <%= listing.itemsGiven || 0 %></li>
                        <li class="list-group-item">Items Received: <%= listing.itemsReceived || 0 %></li>
                        <li class="list-group-item">Contact: <%= listing.phone %></li>
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/listings" class="btn btn-primary me-2">Back to All Listings</a>
                <!--  %> -->
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-secondary me-2">Edit</a>

                <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete this entry</button>
                   
                </form>
            </div>
            <br/>
           
            
        </div>
        
    </div>
    

    <!-- Bootstrap CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    

</body>

