<% layout("/layouts/boilerplate") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donation</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; 
        }
        .container {
            flex: 1; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4 text-center">Create a New Listing</h1>
        <!-- Ensure form method is POST and action points to correct route -->
        <form 
        method="POST" 
        action="/listings" 
        class="needs-validation" 
        novalidate 
        enctype="multipart/form-data">
            <!-- Name field -->
            <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Name:</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="Enter your name" class="form-control" id="name" name="listing[name]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>
            </div>
            
            <!-- Age field -->
            <div class="form-group row">
                <label for="age" class="col-sm-2 col-form-label">Age:</label>
                <div class="col-sm-10">
                    <input type="number" placeholder="Enter your age" class="form-control" id="age" name="listing[age]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your age.</div>
                </div>
            </div>
            
            <!-- Location field -->
            <div class="form-group row">
                <label for="location" class="col-sm-2 col-form-label">Location:</label>
                <div class="col-sm-10">
                    <input type="text" placeholder="Enter your location" class="form-control" id="location" name="listing[location]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your location.</div>
                </div>
            </div>
            
            <!-- Items Given field -->
            <div class="form-group row">
                <label for="itemsGiven" class="col-sm-2 col-form-label">Items Given:</label>
                <div class="col-sm-10">
                    <input type="number" placeholder="Items Given" class="form-control" id="itemsGiven" name="listing[itemsGiven]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter the number of items given.</div>
                </div>
            </div>
            
            <!-- Items Received field -->
            <div class="form-group row">
                <label for="itemsReceived" class="col-sm-2 col-form-label">Items Received:</label>
                <div class="col-sm-10">
                    <input type="number" placeholder="Items Received" class="form-control" id="itemsReceived" name="listing[itemsReceived]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter the number of items received.</div>
                </div>
            </div>
        
            <!-- Contact number field -->
            <div class="form-group row">
                <label for="phone" class="col-sm-2 col-form-label">Contact Number:</label>
                <div class="col-sm-10">
                    <input type="number" placeholder="Contact number" class="form-control" id="phone" name="listing[phone]" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter your contact number.</div>
                </div>
            </div>
            <!-- Image field -->
            <div class="form-group row">
                <label for="image" class="col-sm-2 col-form-label">Upload Image</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" id="image" name="listing[image]" required>
                    <div class="valid-feedback"></div>
                    <div class="invalid-feedback">Upload Image</div>
                </div>
            </div>
            
            <!-- Submit button -->
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-dark add-btn mt-3" style="background-color: #fe424d; border:none;">Add</button>
                </div>
            </div>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="/js/script.js"></script>
    
</body>
</html>
